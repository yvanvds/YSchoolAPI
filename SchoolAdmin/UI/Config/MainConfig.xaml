<UserControl x:Class="SchoolAdmin.UI.Config.MainConfig"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SchoolAdmin.UI.Config"
             mc:Ignorable="d" 
             Background="White"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Vertical">
                <GroupBox Header="Connecties" Margin="10">
                    <StackPanel>
                    <CheckBox x:Name="UseWisa" Content="Sync met Wisa" Margin="5"/>
                    <CheckBox x:Name="UseAD" Content="Sync met Active Directory" Margin="5"/>
                    <CheckBox x:Name="UseSmartschool" Content="Sync met Smartschool" Margin="5"/>
                    <CheckBox x:Name="UseGoogle" Content="Sync met Google" Margin="5"/>
                    <CheckBox x:Name="UseLdap" Content="Sync met OpenLDAP" Margin="5"/>
                </StackPanel>
                </GroupBox>

            </StackPanel>
        </Grid>
</UserControl>
