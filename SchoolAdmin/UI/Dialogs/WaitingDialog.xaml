<Window x:Class="SchoolAdmin.UI.WaitingDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SchoolAdmin.UI"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        WindowStyle="None"
        WindowStartupLocation="CenterOwner"
        mc:Ignorable="d"
        Title="WaitingDialog" Height="350" Width="400">
    <Grid>
    <StackPanel Orientation="Vertical">
      <TextBlock x:Name="Message" HorizontalAlignment="Center" Text="Waiting..." TextWrapping="Wrap" Margin="10"/>
      <Image gif:ImageBehavior.AnimatedSource="/Icons/Mobius.gif"/>
    </StackPanel>
    </Grid>
</Window>
